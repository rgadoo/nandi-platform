# API Configuration
# Base URL for backend API, should not end with a trailing slash
REACT_APP_API_URL=http://localhost:8080/api

# Global mock data toggle
# Set to 'false' to use real APIs by default, 'true' to use mock data
REACT_APP_USE_MOCK_DATA=true

# Component-specific mock data toggles
# Set each to 'false' to use real API by default, 'true' to use mock data
# These override the global REACT_APP_USE_MOCK_DATA setting
REACT_APP_KARMA_CAFE_USE_MOCK=true
REACT_APP_SOUL_QUEST_USE_MOCK=true
REACT_APP_WISDOM_PETS_USE_MOCK=true 